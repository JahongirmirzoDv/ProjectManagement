<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_add_calendar"
        style="@style/DefaultLayoutStyle"
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image2"
            style="@style/OthersImageIconStyle"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_email" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/goalMap"
            style="@style/OtherScreenTextStyle"
            android:layout_toEndOf="@id/image2"
            android:text="@string/link_calendar" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/size_5dp"
            android:contentDescription="@string/todo"
            android:padding="@dimen/size_15dp"
            android:src="@drawable/ic_forvard_in_other" />
    </RelativeLayout>

    <RelativeLayout
        android:paddingVertical="@dimen/_10sdp"
        android:id="@+id/rl_change_lan"
        style="@style/DefaultLayoutStyle"
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_add_calendar">

        <ImageView
            android:id="@+id/image3"
            style="@style/OthersImageIconStyle"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_baseline_language_24" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_lan"
            android:layout_toEndOf="@id/image3"
            style="@style/OtherScreenTextStyle"
            android:text="@string/setting_lan" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/size_5dp"
            android:contentDescription="@string/todo"
            android:padding="@dimen/size_15dp"
            android:src="@drawable/ic_forvard_in_other" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>