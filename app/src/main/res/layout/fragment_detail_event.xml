<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.screens.home_activity.adding.create_task.CreateTaskFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnusedAttribute">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/size_12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_back_button_cross" />

            <TextView
                style="@style/MyTextViewStyleBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/inter_bold"
                android:text="Vazifa yaratish"
                android:textSize="@dimen/text_16sp" />

            <View
                android:id="@+id/createTaskBlueButton"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/size_12dp"
                android:background="@color/yellow" />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_45dp"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        tools:layout_editor_absoluteX="149dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/size_50dp">

            <View
                android:id="@+id/view18"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_20dp"
                android:background="@color/colorWhiteSoft"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/consayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view18">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_task_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="top"
                    android:inputType="textPersonName"
                    android:paddingStart="@dimen/size_16dp"
                    android:paddingTop="@dimen/size_30dp"
                    android:paddingEnd="@dimen/size_16dp"
                    android:textColor="@color/colorDarkBlue"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/nothing_choose_hint" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_task_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="top"
                    android:inputType="textPersonName"
                    android:paddingStart="@dimen/size_16dp"
                    android:paddingTop="@dimen/size_30dp"
                    android:paddingEnd="@dimen/size_16dp"
                    android:textColor="@color/colorDarkBlue"
                    android:textSize="@dimen/text_15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_task_name"
                    tools:text="@string/nothing_choose_hint" />

                <View
                    android:id="@+id/view19"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_task_description" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_task_YaQM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:gravity="top"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/size_16dp"
                android:paddingTop="@dimen/size_30dp"
                android:paddingEnd="@dimen/size_16dp"
                android:textColor="@color/colorDarkBlue"
                android:textSize="@dimen/text_15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/consayout"
                tools:text="@string/nothing_choose_hint" />

            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_20dp"
                android:background="@color/colorWhiteSoft"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_task_YaQM" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/taskPerformerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_12dp"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_1">

                <TextView
                    android:id="@+id/tvPerformer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16dp"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:text="@string/hint_performer"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/avatarPerformer"
                    android:layout_width="@dimen/size_35dp"
                    android:layout_height="@dimen/size_35dp"
                    android:layout_marginStart="@dimen/size_20dp"
                    app:cardCornerRadius="@dimen/size_30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPerformer"
                    app:layout_constraintEnd_toStartOf="@+id/namePerformer"
                    app:layout_constraintHorizontal_bias="0.72"
                    app:layout_constraintStart_toEndOf="@+id/tvPerformer"
                    app:layout_constraintTop_toTopOf="@+id/tvPerformer">

                    <ImageView
                        android:id="@+id/taskPerformerImageAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_user" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/namePerformer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/avatarPerformer"
                    app:layout_constraintStart_toEndOf="@+id/avatarPerformer"
                    app:layout_constraintTop_toTopOf="@+id/avatarPerformer"
                    app:layout_constraintWidth_percent="0.55"
                    tools:hint="Ibrahim Gulyamov" />
                <!--                app:layout_constraintEnd_toStartOf="@+id/addPerformer"-->


                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginTop="@dimen/size_15dp"
                    android:background="@color/colorDarkBlue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/avatarPerformer" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/taskMasterLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/size_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/taskPerformerLayout">

                <TextView
                    android:id="@+id/tvMaster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16dp"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:text="@string/tv_master"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/avatarMaster"
                    android:layout_width="@dimen/size_35dp"
                    android:layout_height="@dimen/size_35dp"
                    android:layout_marginStart="@dimen/size_20dp"
                    app:cardCornerRadius="@dimen/size_30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvMaster"
                    app:layout_constraintEnd_toStartOf="@+id/nameMaster"
                    app:layout_constraintHorizontal_bias="0.63"
                    app:layout_constraintStart_toEndOf="@+id/tvMaster"
                    app:layout_constraintTop_toTopOf="@+id/tvMaster">

                    <ImageView
                        android:id="@+id/taskMasterImageAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_user" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/nameMaster"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/avatarMaster"
                    app:layout_constraintHorizontal_bias="0.65"
                    app:layout_constraintStart_toEndOf="@+id/avatarMaster"
                    app:layout_constraintTop_toTopOf="@+id/avatarMaster"
                    app:layout_constraintWidth_percent="0.55"
                    tools:hint="Ibrahim Gulyamov" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_20dp"
                android:background="@color/colorWhiteSoft"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/taskMasterLayout" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/taskDeadlineLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_12dp"
                android:background="@color/white"
                android:paddingBottom="@dimen/size_18dp"
                app:layout_constraintTop_toBottomOf="@id/view20">

                <ImageView
                    android:id="@+id/imgBeginingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_calendar_in_create_project" />

                <TextView
                    android:id="@+id/tvBegingTimeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Boshlanish vaqti:"
                    app:layout_constraintBottom_toBottomOf="@+id/imgBeginingTime"
                    app:layout_constraintStart_toEndOf="@+id/imgBeginingTime"
                    app:layout_constraintTop_toTopOf="@+id/imgBeginingTime" />

                <View
                    android:id="@+id/view7"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/size_30dp"
                    android:background="@color/underLine"
                    app:layout_constraintBottom_toBottomOf="@+id/tvBegingTimeTitle"
                    app:layout_constraintEnd_toStartOf="@+id/imgEndingTime"
                    app:layout_constraintStart_toEndOf="@id/tvBegingTimeTitle"
                    app:layout_constraintTop_toTopOf="@+id/tvBegingTimeTitle"

                    />

                <ImageView
                    android:id="@+id/imgEndingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintBottom_toBottomOf="@+id/tvBegingTimeTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.18"
                    app:layout_constraintStart_toEndOf="@+id/tvBegingTimeTitle"
                    app:layout_constraintTop_toTopOf="@+id/tvBegingTimeTitle"
                    app:srcCompat="@drawable/ic_calendar_in_create_project" />

                <TextView
                    android:id="@+id/tvEndingTimeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Tugatish vaqti:"
                    app:layout_constraintBottom_toBottomOf="@+id/imgEndingTime"
                    app:layout_constraintStart_toEndOf="@+id/imgEndingTime"
                    app:layout_constraintTop_toTopOf="@+id/imgEndingTime" />

                <TextView
                    android:id="@+id/tvBegingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10dp"
                    android:layout_marginTop="16dp"
                    android:hint="yyyy-mm-dd"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/tvBegingTimeTitle"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/imgBeginingTime"
                    app:layout_constraintTop_toBottomOf="@+id/tvBegingTimeTitle" />

                <View
                    android:id="@+id/viewId"
                    android:layout_width="@dimen/size_1dp"
                    android:layout_height="@dimen/size_20dp"
                    android:layout_marginStart="@dimen/size_10dp"
                    android:background="@color/underLine"
                    app:layout_constraintBottom_toBottomOf="@id/tvBegingTime"
                    app:layout_constraintStart_toEndOf="@id/tvBegingTime"
                    app:layout_constraintTop_toTopOf="@id/tvBegingTime" />

                <TextView
                    android:id="@+id/tvBeginTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10dp"
                    android:hint="hh:mm"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/viewId"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@id/viewId"
                    app:layout_constraintTop_toTopOf="@+id/viewId" />

                <TextView
                    android:id="@+id/tvEndingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_radus_4dp"
                    android:hint="yyyy-mm-dd"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/tvEndingTimeTitle"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/imgEndingTime"
                    app:layout_constraintStart_toStartOf="@+id/imgEndingTime"
                    app:layout_constraintTop_toBottomOf="@+id/imgEndingTime" />

                <View
                    android:id="@+id/viewId2"
                    android:layout_width="@dimen/size_1dp"
                    android:layout_height="@dimen/size_20dp"
                    android:layout_marginStart="@dimen/size_10dp"
                    android:background="@color/underLine"
                    app:layout_constraintBottom_toBottomOf="@id/tvEndingTime"
                    app:layout_constraintStart_toEndOf="@id/tvEndingTime"
                    app:layout_constraintTop_toTopOf="@id/tvEndingTime" />

                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10dp"
                    android:background="@drawable/background_radus_4dp"
                    android:hint="hh:mm"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/viewId2"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/viewId2"
                    app:layout_constraintTop_toTopOf="@+id/viewId2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view21"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_20dp"
                android:background="@color/colorWhiteSoft"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/taskDeadlineLayout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fileLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/size_12dp"
                app:layout_constraintTop_toBottomOf="@+id/view21">

                <TextView
                    android:id="@+id/fileTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_24dp"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:text="Fayllar"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/fileIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintBottom_toBottomOf="@+id/fileTitle"
                    app:layout_constraintEnd_toStartOf="@+id/fileCount"
                    app:layout_constraintHorizontal_bias="0.91"
                    app:layout_constraintStart_toEndOf="@+id/fileTitle"
                    app:layout_constraintTop_toTopOf="@+id/fileTitle"
                    app:srcCompat="@drawable/ic_file_count_or_select" />

                <TextView
                    android:id="@+id/fileCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/fileIcon"
                    app:layout_constraintEnd_toStartOf="@+id/fileAdd"
                    app:layout_constraintTop_toTopOf="@+id/fileIcon"
                    app:layout_constraintVertical_bias="0.31" />

                <ImageView
                    android:id="@+id/fileAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:clickable="true"
                    android:contentDescription="@string/app_name"
                    android:focusable="true"
                    app:layout_constraintBottom_toBottomOf="@+id/fileCount"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/fileCount"
                    app:srcCompat="@drawable/ic_chevron_up" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:id="@+id/view22"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_20dp"
                android:background="@color/colorWhiteSoft"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fileLayout" />


            <View
                android:id="@+id/view22_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_20dp"
                android:background="@color/colorWhiteSoft"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/statusLayout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/importanceLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_56sdp"
                android:background="@color/white"
                android:paddingBottom="@dimen/size_12dp"
                app:layout_constraintTop_toBottomOf="@+id/view22_2">

                <TextView
                    android:id="@+id/importanceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_24dp"
                    android:text="Muhimlik darajasi"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/importanceIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/importanceTitle"
                    app:layout_constraintEnd_toStartOf="@+id/importanceText"
                    app:layout_constraintHorizontal_bias="0.91"
                    app:layout_constraintStart_toEndOf="@+id/importanceTitle"
                    app:layout_constraintTop_toTopOf="@+id/importanceTitle"
                    app:srcCompat="@drawable/ic_importance_flag" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/importanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:text="Yuqori"
                    android:textSize="@dimen/text_16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/importanceIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/importanceIcon"
                    app:layout_constraintVertical_bias="0.31" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view22_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_20dp"
                android:background="@color/colorWhiteSoft"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/importanceLayout" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/statusLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_56sdp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/view22">

                <TextView
                    android:id="@+id/statusTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_24dp"
                    android:text="Status"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/statusAdd"
                    android:layout_width="@dimen/size_25dp"
                    android:layout_height="@dimen/size_25dp"
                    android:layout_marginEnd="24dp"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintBottom_toBottomOf="@+id/statusTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/statusTitle"
                    app:srcCompat="@drawable/ic_new" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:id="@+id/view24"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_20dp"
                android:background="@color/colorWhiteSoft"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/statusLayout" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linkingGoalToMapLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/size_12dp"
                app:layout_constraintTop_toBottomOf="@+id/view22_3" />

            <View
                android:id="@+id/view23"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_20dp"
