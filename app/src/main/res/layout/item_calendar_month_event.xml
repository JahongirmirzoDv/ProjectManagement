<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroun_event_blue"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_5dp"
        android:paddingTop="@dimen/size_3dp"
        android:paddingRight="@dimen/size_5dp"
        android:paddingBottom="@dimen/size_3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvEventName"
            style="@style/MyTextViewStyleBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_3dp"
            android:fontFamily="@font/inter_regular"
            android:maxLines="1"
            android:textSize="@dimen/text_8sp"
            tools:text="Goals" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>