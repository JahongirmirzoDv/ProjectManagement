<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/week_view_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <uz.perfectalgorithm.projects.tezkor.utils.views.calendarViews.MyScrollView
        android:id="@+id/scroll_view_week"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/week_view_hour_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </uz.perfectalgorithm.projects.tezkor.utils.views.calendarViews.MyScrollView>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/day_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/scroll_view_week" />

</RelativeLayout>