                android:paddingTop="@dimen/_25sdp"
                android:paddingBottom="@dimen/_25sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etGoalName" />

