                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/goalLeft1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.25" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/avatarPerformer"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    app:cardCornerRadius="@dimen/_30sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPerformer"
                    app:layout_constraintEnd_toStartOf="@+id/goalNamePerformer"
                    app:layout_constraintStart_toEndOf="@+id/goalLeft1"
                    app:layout_constraintTop_toTopOf="@+id/tvPerformer">

                    <ImageView
                        android:id="@+id/goalPerformerImageAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_user" />
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/goalNamePerformer"
                    style="@style/CreateScreensHintTextStyle"
                    android:hint="@string/select_performer"
                    app:layout_constraintBottom_toBottomOf="@+id/avatarPerformer"
                    app:layout_constraintEnd_toStartOf="@+id/addPerformer"
                    app:layout_constraintStart_toEndOf="@+id/avatarPerformer"
                    app:layout_constraintTop_toTopOf="@+id/avatarPerformer" />

                <ImageView
                    android:id="@+id/addPerformer"
                    style="@style/CreateScreensCrossIconStyle"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintBottom_toBottomOf="@+id/goalNamePerformer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/goalNamePerformer"
                    app:srcCompat="@drawable/ic_back_button_cross_grey" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginTop="@dimen/_5sdp"
