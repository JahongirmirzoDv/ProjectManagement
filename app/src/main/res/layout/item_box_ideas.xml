<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemIdeaBox"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_69sdp"
    android:layout_marginStart="@dimen/_4sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_4sdp"
    android:background="@drawable/background_white">


    <ImageButton
        android:id="@+id/ideaBoxItemMoreButton"
        style="@style/DefImageViewStyle"
        android:layout_marginEnd="@dimen/_10sdp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_more_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ideaBoxItemMoreButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTitle"
            style="@style/TextLargeInterBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            tools:text="Idealar qutisi" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCount"
            style="@style/TextSmall"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_1sdp"
            android:text="@string/_1_s_fikr_lar"
            android:textColor="@color/sub_hint_text_color" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>