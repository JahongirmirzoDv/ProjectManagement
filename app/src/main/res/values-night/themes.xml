<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ProjectManagement" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#0BACC1</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
    </style>

    <style name="DefaultStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorDarkBlue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#0BACC1</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="DefCardViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/_6sdp</item>
        <item name="cardElevation">@dimen/_6sdp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="layout_constraintDimensionRatio">3:2</item>
    </style>

    <style name="DashboardCardsStyle" parent="DefCardViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>


    <style name="MyTabLayout" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorDarkBlue</item>
        <item name="android:textSize">@dimen/text_13sp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>


    <style name="MyTextViewStyleBlack" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyTextViewStyleWhite" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyTextViewStyleDarkBlue" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorDarkBlue</item>
    </style>


    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="MyCustomSpinner" parent="Widget.AppCompat.Spinner">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_13sp</item>
    </style>

    <style name="MyCustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyCustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/white</item>
    </style>


    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="colorPrimary">@color/colorDarkBlue</item>
        <item name="colorOnSurface">@color/colorDarkBlue</item>
        <item name="android:textSize">@dimen/text_15sp</item>
    </style>

    <style name="MyAutoCompliteInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="colorPrimary">@color/colorDarkBlue</item>
        <item name="colorOnSurface">@color/colorDarkBlue</item>
        <item name="android:textSize">@dimen/text_15sp</item>
    </style>


    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#00f</item>
    </style>


    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
    </style>

    <style name="DatePickerButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/blue</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">13sp</item>

    </style>


    <style name="MyEDitTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/size_16dp</item>
        <item name="android:textColorHint">@color/mdtp_red</item>
        <item name="android:layout_marginStart">@dimen/_17sdp</item>
        <item name="android:layout_marginEnd">@dimen/_17sdp</item>
        <item name="android:layout_marginTop">@dimen/_7sdp</item>

    </style>

    <style name="MyButtonStyle">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>


    <style name="MySaveBtnTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/back_btn_dialog</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="MyCancelBtnTextView">
        <item name="backgroundTint">@color/empty_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/back_btn_dialog</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="MyBtnMore">
        <item name="backgroundTint">@color/empty_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_et_name</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="MyTextViewStyle">
        <item name="android:textColor">@color/text_color_intro</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyDescTextViewStyle">
        <item name="android:textColor">@color/desc_text_color_intro</item>
        <item name="android:textSize">@dimen/text_24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginStart">@dimen/_14sdp</item>
        <item name="android:layout_marginEnd">@dimen/_14sdp</item>
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/blue</item>
    </style>


    <style name="RatingBarStyle">
        <item name="srb_clearRatingEnabled">false</item>
        <item name="srb_clickable">false</item>
        <item name="srb_drawableEmpty">@drawable/star_empty</item>
        <item name="srb_drawableFilled">@drawable/star_filled</item>
        <item name="srb_isIndicator">false</item>
        <item name="srb_minimumStars">0</item>
        <item name="srb_numStars">5</item>
        <item name="srb_scrollable">true</item>
        <item name="srb_starHeight">@dimen/_14sdp</item>
        <item name="srb_starPadding">@dimen/_3sdp</item>
        <item name="srb_starWidth">@dimen/_14sdp</item>
        <item name="srb_stepSize">0.5</item>
    </style>
</resources>