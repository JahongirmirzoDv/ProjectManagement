<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.ProjectManagement" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#364F6B</item>
        <item name="colorSecondaryVariant">#364F6B</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
    </style>

    <!--___________________TextStyle_______________________________________-->

    <style name="TextMedium">
        <item name="contentDescription">@string/app_name</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingRight">@dimen/_4sdp</item>
        <item name="android:paddingLeft">@dimen/_4sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
    </style>


    <style name="TextSmall" parent="TextMedium">
        <item name="contentDescription">@string/app_name</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLine">1</item>

    </style>

    <style name="TextSmallSemiBold" parent="TextMedium">
        <item name="contentDescription">@string/app_name</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="TextLarge" parent="TextMedium">
        <item name="contentDescription">@string/app_name</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="TextLargeInterBold" parent="TextLarge">
        <item name="contentDescription">@string/app_name</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="OtherScreenTextStyle" parent="TextSmall">
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="DashboardTextStyle" parent="TextMedium">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">@dimen/_21sdp</item>
        <item name="android:elevation">@dimen/_7sdp</item>
    </style>


    <!--_____________________________ImageViewStyle_______________________________________-->


    <style name="ImageViewDefStyle">
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:layout_width">@dimen/_42sdp</item>
        <item name="android:layout_height">@dimen/_42sdp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="ImageLogoStyle" parent="ImageViewDefStyle">
        <item name="contentDescription">@string/app_name</item>
        <item name="android:layout_width">@dimen/_90sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_height">@dimen/_33sdp</item>
    </style>

    <style name="OthersImageIconStyle" parent="ImageViewDefStyle">
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginVertical">@dimen/_10sdp</item>
    </style>


    <!--_____________________________ButtonStyle_______________________________________-->


    <style name="ButtonDefStyle">
        <item name="android:layout_width">@dimen/_133sdp</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:layout_marginHorizontal">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="textSize">@dimen/_12ssp</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="cornerRadius">@dimen/_7sdp</item>
    </style>

    <style name="FabButtonStyle" parent="ButtonDefStyle">
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="elevation">@dimen/_3sdp</item>
        <item name="android:layout_marginBottom">@dimen/_16sdp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="srcCompat">@drawable/ic_add_plus</item>
    </style>

    <style name="DeleteDialogButtonStyle" parent="ButtonDefStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/_13sdp</item>
        <item name="android:layout_marginTop">@dimen/_40sdp</item>
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>
    </style>

    <style name="GeneralBlueButtonStyle" parent="ButtonDefStyle">
        <item name="cornerRadius">@dimen/_4sdp</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">@dimen/_17sdp</item>
        <item name="android:layout_marginStart">@dimen/_17sdp</item>
        <item name="android:layout_marginEnd">@dimen/_17sdp</item>
    </style>

    <style name="GeneralRedButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_14sdp</item>
        <item name="android:layout_marginTop">@dimen/_14sdp</item>
        <item name="android:layout_marginEnd">@dimen/_14sdp</item>
        <item name="drawableStartCompat">@drawable/ic_delete_white</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/_14sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">@string/delete</item>
    </style>


    <!--_________________________EditText_________________________________-->

    <style name="EditTextDefStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
    </style>


    <style name="CompanyEditTextStyle" parent="EditTextDefStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/size_12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/_17sdp</item>
        <item name="android:layout_marginEnd">@dimen/_17sdp</item>
        <item name="android:layout_marginTop">@dimen/_7sdp</item>
    </style>


    <!--________________LayoutStyles_____________________-->
    <style name="DefaultLayoutStyle">
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>


</resources>